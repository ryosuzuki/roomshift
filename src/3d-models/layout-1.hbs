<!-- left wall -->
<a-entity io3d-wall="l: 8.2; w: 0.2">
  <a-entity io3d-door="l: 0.9; h: 2; w: 0.05; hinge: left; side: front; v: 3; doorType: singleSwing; doorAngle: 45" position="0.6 0 0"></a-entity>
</a-entity>

<a-entity io3d-floor="material_top: wood_parquet_oak_black; l: 2.2; h: 0.1; w: {{add length 0.4}}; hCeiling: 2.4; hasCeiling: false;"
    position="-0.2 0 0"></a-entity>

<!-- Top compartment -->

<a-entity io3d-floor="l: 6.3; h: 0.1; w: {{add length 0.4}}; hCeiling: 2.4; hasCeiling: false;" position="2 0 0"></a-entity>

<a-entity io3d-wall="l: {{add length 0.4}}; w: 0.1;" position="2.1 0 0" rotation="0 -90 0" class="entry-wall">
  {{#each segments}}
  <a-entity io3d-door="l: 0.9; h: 2; w: 0.05; hinge: right; side: front; v: 3; doorType: singleSwing; doorAngle: 45" position="{{add this 2.2}} 0 0"></a-entity>
  {{/each}}
</a-entity>

<a-entity io3d-wall="l: {{add length 0.4}}; w: 0.2" position="8.3 0 0" rotation="0 -90 0"
  class="far-wall">
  {{#each segments}}
  <a-entity io3d-window="l:1; h:1.2" position="{{add this 0.5}} 1 0"></a-entity>
  <a-entity io3d-window="l:1; h:1.2" position="{{add this 1.6}} 1 0"></a-entity>

  <a-entity io3d-window="l:1; h:1.2" position="{{add this 3.5}} 1 0"></a-entity>
  <a-entity io3d-window="l:1; h:1.2" position="{{add this 4.6}} 1 0"></a-entity>
  {{/each}}
</a-entity>

<!-- bottom and right walls -->
<a-entity io3d-wall="l: 8.2; w: 0.2" position="0 0 {{add length 0.2}}"></a-entity>
<a-entity io3d-wall="l: {{add length 0.4}}; w: 0.2" position="0 0 0" rotation="0 -90 0"></a-entity>